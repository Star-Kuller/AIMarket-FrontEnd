@code
{
  ElementReference _textarea { get; set; }
  string TextAreaValue { get; set; }
  static string _aiImage = "data:image/png;base64,";
  static readonly string _myImage = "https://randomuser.me/api/portraits/women/44.jpg";
  List<Message> _messages = new List<Message>();

  private async Task AutoResize()
  {
    await JSRuntime.InvokeVoidAsync("autoResize", _textarea);
  }
  
  private async Task CheckForEnter(KeyboardEventArgs e)
  {
    if (e.Key == "Enter")
    {
      await Send();
    }
  }

  private async Task Send()
  {
    var temp = TextAreaValue?.Trim();
    TextAreaValue = string.Empty;
    if (!string.IsNullOrWhiteSpace(temp))
    {
      var result = new List<string>(temp.Split("\n"));
      _messages.Add(new Message(true, _myImage, result));
    }
    await Task.Delay(15);
    await JSRuntime.InvokeVoidAsync("autoResize", _textarea);
    StateHasChanged();
  }

  private class Message
  {
    public bool IsMyMessage { get; set; }
    public string Image { get; set; }
    public List<string> Text { get; set; }

    public Message(bool isMyMessage, string image, List<string> text)
    {
      IsMyMessage = isMyMessage;
      Image = image;
      Text = text;
    }
  }
}
